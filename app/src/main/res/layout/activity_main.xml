<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">

	<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<TextView
				android:id="@+id/tv_tips"
				android:layout_margin="10dp"
				app:layout_constraintTop_toTopOf="parent"
				android:text="@string/text_tips"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

		<LinearLayout
				android:id="@+id/ll"
				android:layout_marginTop="10dp"
				app:layout_constraintTop_toBottomOf="@id/tv_tips"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="200dp">

			<android.support.v7.widget.AppCompatImageView
					android:id="@+id/iv_original"
					tools:src="@color/colorPrimary"
					android:padding="8dp"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>

			<android.support.v7.widget.AppCompatImageView
					android:id="@+id/iv_result"
					tools:src="@color/colorAccent"
					android:padding="8dp"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/ll_tvs"
				android:orientation="horizontal"
				app:layout_constraintTop_toBottomOf="@id/ll"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<android.support.v7.widget.AppCompatTextView
					android:id="@+id/tv_original"
					tools:text="12321321123123213232132132133"
					android:textSize="12sp"
					android:layout_margin="8dp"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"/>

			<android.support.v7.widget.AppCompatTextView
					android:id="@+id/tv_result"
					tools:text="12321321123123213232132132133"
					android:textSize="12sp"
					android:layout_margin="8dp"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"/>

		</LinearLayout>

		<android.support.v7.widget.AppCompatButton
				android:id="@+id/btn_capture"
				android:text="@string/text_capture"
				android:textAllCaps="false"
				app:layout_constraintTop_toBottomOf="@id/ll_tvs"
				android:onClick="capture"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

		<android.support.v7.widget.AppCompatButton
				android:id="@+id/btn_choose"
				android:text="@string/text_choose"
				android:textAllCaps="false"
				app:layout_constraintTop_toBottomOf="@id/btn_capture"
				android:onClick="choose"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

		<android.support.v7.widget.AppCompatButton
				android:id="@+id/btn_luban"
				android:text="@string/text_comress_by_luban"
				android:textAllCaps="false"
				app:layout_constraintTop_toBottomOf="@id/btn_choose"
				android:onClick="luban"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

		<android.support.v7.widget.AppCompatButton
				android:id="@+id/btn_luban2"
				android:text="@string/text_comress_by_luban_callback"
				android:textAllCaps="false"
				app:layout_constraintTop_toBottomOf="@id/btn_luban"
				android:onClick="lubanWithCallback"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

		<android.support.v7.widget.AppCompatButton
				android:id="@+id/btn_compressor"
				android:text="@string/text_comress_by_compressor"
				android:textAllCaps="false"
				app:layout_constraintTop_toBottomOf="@id/btn_luban2"
				android:onClick="compressor"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

		<android.support.v7.widget.AppCompatButton
				android:id="@+id/btn_compressor2"
				android:text="@string/text_comress_by_compressor_callback"
				android:textAllCaps="false"
				app:layout_constraintTop_toBottomOf="@id/btn_compressor"
				android:onClick="compressorWithCallback"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

	</android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>